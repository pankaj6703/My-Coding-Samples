{% block body %}
<title>{% block title %} Manage Property Listing | Admin{% endblock %}</title>
	<section id="content">
	<div class="g12">
		<h1>Manage Property Listing</h1>
		<button class="btnAddNew" onclick="javascript:addNewPlan();">Add New</button>
		<div class="dataTables_wrapper">
			<table class="datatable">
			<thead>
				<tr>
					<th class="sorting col-2" style="width: 58px;" rowspan="1" colspan="1"> # &nbsp;&nbsp;</th>
					<th class="sorting col-3" style="width: 109px;" rowspan="1" colspan="1">Name &nbsp;&nbsp;</th>
					<!--<th class="sorting col-3" style="width: 104px;" rowspan="1" colspan="1">Description &nbsp;&nbsp;</th>-->
					<th class="sorting col-2" style="width: 120px;" rowspan="1" colspan="1">Address &nbsp;&nbsp;</th>
					<th class="sorting col-2" style="width: 75px;" rowspan="1" colspan="1">State &nbsp;&nbsp;</th>
					<th class="sorting col-2" style="width: 240px;" rowspan="1" colspan="1">City &nbsp;&nbsp;</th>
					<th class="sorting col-2" style="width: 77px;" rowspan="1" colspan="1">Phone &nbsp;&nbsp;</th>
					<!--<th class="sorting col-3" style="width: 75px;" rowspan="1" colspan="1">Zip &nbsp;&nbsp;</th>-->
					<!--<th class="sorting col-2" rowspan="1" colspan="1" style="width: 180px;">Video Url</th>-->
					<th class="sorting col-2" rowspan="1" colspan="1" style="width: 180px;">Price</th>					
					<th class="col-2" id="colAction" rowspan="1" colspan="1"><label class="lblAction">Action &nbsp;&nbsp;</label></th>
				</tr>
			</thead>
			</thead>
			<tbody>		
				{% for properties in property %}
				<tr class="gradeA odd">
					<td class="">{{properties.id}}</td>
					<td class="txtleft">{{properties.name}}</td>
				<!--	<td class="txtleft">{{properties.description}}</td>-->
					<td class="txtleft">{{properties.address}}</td>
					<td class="txtleft">{{properties.state_name}}</td>
					<td class="txtleft">{{properties.city_name}}</td>
					<td class="txtleft">{{properties.phone}}</td>
					<!--<td class="txtleft">{{properties.zip}}</td>-->
				<!--<td class="txtleft">{{properties.video_url}}</td>-->
					<td class="txtleft">{{properties.price}}</td>
						<td><a href="{{ path('RARAdminBundle_updateproperty',{ 'id': properties.id }) }}"><img src="{{ asset('bundles/images/pencil.png') }}"></image></a><a href="{{ path('RARAdminBundle_propertydelete', { 'id': properties.id }) }}"><img src="{{ asset('bundles/images/cross.png') }}" onclick="confirm_Delete(event);"></image></a></td>				
				</tr>
				{% endfor %}
			</table>
		</div>
	</div>	
{% endblock %}
