	<script>
	$(document).ready(function(){
		$("#colAction").removeClass("sorting");
	});
	function confirm_Delete(e) {
    var answer = confirm("Are you sure you want to delete this record?")
    if (!answer){
        e.preventDefault();
        return false;
    }
}
	</script>
	<script type="text/javascript">		
