{% block body %}
<title>{% block title %} Manage Cms | Admin{% endblock %}</title>
	<section id="content">
	<div class="g12">
		<h1>Manage Pages</h1>
		<button class="btnAddNew" onclick="javascript:addNewPlans();">Add Page</button>
		<div class="dataTables_wrapper">
			<table class="datatable">
			<thead>
				<tr>
					<th class="sorting col-2" style="width: 14px;" rowspan="1" colspan="1"> # &nbsp;&nbsp;</th>
					<th class="sorting col-3" style="width: 56px;" rowspan="1" colspan="1">Title&nbsp;&nbsp;</th>
										<th class="sorting col-3" style="width: 84px;" rowspan="1" colspan="1">Url&nbsp;&nbsp;</th>
					<th class="col-2" id="colAction" style="width: 43px;" rowspan="1" colspan="1"><label class="lblAction">Action &nbsp;&nbsp;</label></th>
				</tr>
			</thead>
			<tbody>		
		{% for manageCms in cms %}
				<tr class="gradeA odd">
					<td class="">{{manageCms.id}}</td>
					<td class="txtleft">{{manageCms.name}}</td>
					<td class="txtleft">{{manageCms.url}}</td>
					<td><a href="{{ path('RARAdminBundle_editCms',{ 'id': manageCms.id }) }}"><img src="{{ asset('bundles/images/pencil.png') }}"></image></a><a href="{{ path('RARAdminBundle_deleteCms',{ 'id': manageCms.id }) }}"><img src="{{ asset('bundles/images/cross.png') }}" onclick="confirm_Delete(event);"></image></a><a href="{{ path('RARAdminBundle_view',{ 'id': manageCms.id }) }}"><img src="{{ asset('bundles/images/refresh.png') }}"></image></a></td>								</tr>
							{% endfor %}
			</table>

		</div>
	</div>	
