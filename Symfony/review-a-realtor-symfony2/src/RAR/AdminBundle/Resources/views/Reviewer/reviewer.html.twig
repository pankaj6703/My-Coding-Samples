{% block body %}
<title>{% block title %} Manage Reviewers | Admin{% endblock %}</title>
	<section id="content">
	<div class="g12">
		<h1>Manage Reviewers</h1>
		<div class="dataTables_wrapper">
			<table class="datatable">
			<thead>
				<tr>
					<th class="sorting col-2" style="width: 8px;" rowspan="1" colspan="1"> # &nbsp;&nbsp;</th>
					<th class="sorting col-3" style="width: 54px;" rowspan="1" colspan="1">Name &nbsp;&nbsp;</th>
					<th class="sorting col-2" style="width: 93px;" rowspan="1" colspan="1">Email &nbsp;&nbsp;</th>
					<th class="col-2" style="width: 50px;" id="colAction" rowspan="1" colspan="1"><label class="lblAction">Action &nbsp;&nbsp;</label></th>
				</tr>
			</thead>
			<tbody>		
				{% for reviewer in rev %}
				<tr class="gradeA odd">
					<td class="">{{reviewer.id}}</td>
					<td class="txtleft">{{reviewer.first_name}} {{reviewer.last_name}}</td>
					<td class="txtleft">{{reviewer.email}}</td>					
					<td><a href="{{ path('RARAdminBundle_deleteReviewer',{ 'id': reviewer.id }) }}"><img src="{{ asset('bundles/images/cross.png') }}" onclick="confirm_Delete(event);"></image></a></td>			
				</tr>
				{% endfor %}
			</table>

