{% block body %} 
	<section id="content">
		<div class="g12">
			<h1>Manage Categories</h1>
			<button class="btnAddNew" onclick="javascript:addNewPlan();">Add New</button>
			<div class="dataTables_wrapper">
				<table class="datatable">
					<thead>
						<tr>
							<th class="sorting col-1" rowspan="1" colspan="1"># &nbsp;&nbsp;</th>
							<th class="sorting col-2" rowspan="1" colspan="1">Name &nbsp;&nbsp;</th>
							<th class="sorting col-4" rowspan="1" colspan="1">Description &nbsp;&nbsp;</th>
							<th class="sorting col-3" rowspan="1" colspan="1">Parent Category &nbsp;&nbsp;</th>
							<th class="col-2" id="colAction" rowspan="1" colspan="1"><label class="lblAction">Action &nbsp;&nbsp;</label></th>
						</tr>
					</thead>
						<tbody>		
							{% for category in categorys %}
								<tr class="gradeA odd">
									<td class="">{{category.id}}</td>
									<td class="txtleft">{{category.name}}</td>
									<td class="txtleft">{{category.description}}</td>
									<td class="txtleft">{{category.parent_category}}</td>
									<td><a href="{{ path('RARAdminBundle_categoryupdate',{ 'id': category.id }) }}"><img src="{{ asset('bundles/images/pencil.png') }}"></image></a><a href="{{ path('RARAdminBundle_categorydelete', { 'id': category.id }) }}"><img src="{{ asset('bundles/images/cross.png') }}"></image></a></td>			
								</tr>
		 					{% endfor %} 
				</table>
						</tbody>
			</div>
		</div>		
{% endblock %}
