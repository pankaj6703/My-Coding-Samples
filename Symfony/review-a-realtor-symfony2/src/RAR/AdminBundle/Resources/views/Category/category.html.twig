	<script>
		$(document).ready(function(){
		$("#colAction").removeClass("sorting");
	});
	</script>
	<script type="text/javascript">
	function addNewPlan()
	{
		window.location.href = '{{ path('RARAdminBundle_addcategory') }}';
	}
	</script>
