	 <script>
    $(document).ready(function () {
        $('.box').hide();
        $('#option1').show();
        $('#plan').change(function () {
            $('.box').hide();
            $('#'+$(this).val()).show();
        });
    });
    </script>	
    
    <script>
    	$(document).ready(function()
	{
		$("#payment").addClass('active_background');
	});
    </script>				  
	<script>
	$(document).ready(function(){
		updatePlan('{{userPlanId}}');
		$("#plan").val('{{userPlanId}}');
		$("#plan").change(function(){	
            var id=$(this).val();
            updatePlan(id);  
        });	
        
      //var radio =$('input[name=planS]:checked', '#planK').text()  
      //alert(radio);
    $("#plan").change(function(){
    var res=$("#plan option:selected").val();
    $("#chooseP").val(res);
    
    });     
	});
	function updatePlan(id)
	{
 
		             	
		$.ajax({
		url : '{{ path("rar_web_getFeatures",{ "planId": '+id+' }) }}',
		type:'POST',
		data:'planId='+id,
		dataType:'html',   
		success:function(data){
			//var category_product = $(data).find('.city').html();
			$('#features').html(data);

			}
		});
        $.ajax({
		url : '{{ path("rar_web_getDescription",{ "planId": '+id+' }) }}',
		type:'POST',
		data:'planId='+id,
		dataType:'html',   
		success:function(data){
			//var category_product = $(data).find('.city').html();
            $('#planDesc').html(data);

            }
        });
    }
	</script>
