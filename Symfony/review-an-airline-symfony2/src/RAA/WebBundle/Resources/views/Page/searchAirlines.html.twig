function swapImages() {
    var $current = $('#myGallery1 img:visible');
    var $next = $current.next();
    if($next.length === 0) {
        $next = $('#myGallery1 img:first');
    }
    $current.hide();
    $next.show();
}

$(document).ready(function() {
    // Run our swapImages() function every 0.5 secs
    setInterval(swapImages, 5000);
});




