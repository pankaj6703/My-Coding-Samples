		$("#state").change(function(){	
               var id=$(this).val();
             updateCities(id);  

        });	
});

function updateCities(id)
{
 
                //alert(id);              	
               	
               	$.ajax({
               	url : '{{ path("RAAAdminBundle_getCities",{ "stateCode": '+id+' }) }}',
                type:'POST',
                data:'stateCode='+id,
                dataType:'html',   
                success:function(data){
                    //var category_product = $(data).find('.city').html();
                    $('#city').html(data);

                }
            });


}
function passwordupdate()
{
$("#passwordhide").hide();
$("#passwordshow").show();
}
</script>


